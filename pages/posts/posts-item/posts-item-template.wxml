<template name="postsItem">
  <view class="post-cantainer">
    <view class="post-author-date">
      <image class="post-author" src="{{neirong1.avatar}}"></image>
      <text class="post-date">{{neirong1.date}}</text>
    </view>
    <text class="post-tittle">{{neirong1.tittle}}</text>
    <image class="post-image" src="{{neirong1.imgSrc}}"></image>
