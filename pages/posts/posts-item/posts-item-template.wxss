/* ；列表整体布局 */
.post-cantainer{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}
/* 头像和时间 */
.post-author-date{
    margin:10rpx 0 10rpx 20rpx;
}
.post-author-date .post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: center;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 10px;
    font-size: 26rpx;
}
/* 标题 */
.post-tittle{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
/* 首图 */
.post-image{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: 0 auto;
    margin-bottom: 15px;
}
/* 文章目录 */
.post-content{
    color: #666;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
/* 文章状态栏 */
.post-like{
    font-size: 13px;
    display: flex;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
}
.post-like-font{
    margin-right: 20rpx;
}